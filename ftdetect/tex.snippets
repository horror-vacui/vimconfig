snippet eq "create equation environment"
\begin{equation}
	\label{eq:$1}
	$0
\end{equation}
endsnippet

snippet fig "create figure"
\begin{figure}
	\centering
	\includegraphics[width=0.475\textwidth,keepaspectratio]{\string$0}
	\caption{${1:Figure caption}}
	\label{fig:${2:label}}
\end{figure}
endsnippet

snippet fref "create reference to a figure"
Figure~\ref{fig:$0}
endsnippet

snippet lp "Long parenthesis"
\left(${1:${VISUAL:contents}}\right)$0
endsnippet
